{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [ "es2015" ],
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceRoot": "src",
    "sourceMap": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "traceResolution": false
  },
  "include": [ "src/**/*", "tools/**/*" ],
  "exclude": [
    "node_modules",
    "coverage",
    "**/*.spec.ts"
  ]
}